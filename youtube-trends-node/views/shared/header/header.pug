div(id='page-header')
  nav(class='navbar navbar-default navbar-fixed-top')
    div(class='col-md-3 hidden-md-down')
      img(class='logo', src='/images/logo.svg')

    div(class='col-md-6 hidden-md-down note')
      span
        if filters != null
          select(id='country-select', class='form-control selectpicker', data-live-search='true')
            each country in filters.country.list
              option(value=country.code, data-tokens=country.name, selected=country.code == filters.country.selected)
                | #{country.name}
